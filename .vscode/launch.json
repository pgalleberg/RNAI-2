{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask (WSL)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "${workspaceFolder}/backend/app.py",
        "FLASK_ENV": "development",
        "PYTHONPATH": "${workspaceFolder}/backend/"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--host=0.0.0.0",
        "--port=5000"
      ],
      "jinja": true
    },
    {
      "name": "Python: Celery (WSL)",
      "type": "python",
      "request": "launch",
      "module": "celery",
      "env": {
        "FLASK_APP": "${workspaceFolder}/backend/app.py",
        "FLASK_ENV": "development",
        "PYTHONPATH": "${workspaceFolder}/backend/"
      },
      "args": [
        "-A",
        "app:celery",
        "worker",
        "--loglevel=INFO"
      ],
      "jinja": true 
    }

  ]
}
